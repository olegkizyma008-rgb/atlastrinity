{
    "mcpServers": {
        "_comment_tier1": "=== TIER 1: MUST-HAVE (Ядро системи) ===",
        "macos-use": {
            "command": "${PROJECT_ROOT}/vendor/mcp-server-macos-use/.build/release/mcp-server-macos-use",
            "description": "Native macOS control: mouse, keyboard, UI automation, screenshots",
            "permissions": {
                "accessibility": true,
                "screen_recording": true
            },
            "disabled": false,
            "tier": 1,
            "agents": [
                "tetyana",
                "grisha"
            ],
            "note": "Requires swift build in vendor/mcp-server-macos-use"
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-filesystem@2025.12.18",
                "${HOME}",
                "/tmp"
            ],
            "description": "Official filesystem operations (pinned to @modelcontextprotocol/server-filesystem@2025.12.18 for reproducibility)",
            "disabled": false,
            "tier": 1,
            "agents": [
                "tetyana",
                "grisha"
            ]
        },
        "terminal": {
            "command": "python3",
            "connect_timeout": 30,
            "args": [
                "-m",
                "mcp_server.terminal_server"
            ],
            "description": "Terminal command execution with CWD persistence",
            "disabled": false,
            "tier": 1,
            "agents": [
                "tetyana"
            ]
        },
        "sequential-thinking": {
            "command": "bunx",
            "connect_timeout": 60,
            "args": [
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "env": {
                "MAX_HISTORY_SIZE": "1000"
            },
            "description": "Dynamic problem-solving through thought sequences (Critical for Grisha)",
            "disabled": false,
            "tier": 1,
            "agents": [
                "grisha"
            ]
        },
        "_comment_tier2": "=== TIER 2: HIGH PRIORITY (Рекомендовані) ===",
        "chrome-devtools": {
            "command": "bunx",
            "args": [
                "chrome-devtools-mcp@latest"
            ],
            "description": "Chrome DevTools Protocol for browser automation",
            "disabled": false,
            "tier": 2,
            "agents": [
                "tetyana"
            ]
        },
        "git": {
            "command": "python3",
            "connect_timeout": 60,
            "args": [
                "-m",
                "mcp_server.git_server"
            ],
            "description": "Git operations for local repositories",
            "disabled": false,
            "tier": 2,
            "agents": [
                "tetyana"
            ]
        },
        "vibe": {
            "command": "python3",
            "connect_timeout": 60,
            "args": [
                "-m",
                "mcp_server.vibe_server"
            ],
            "description": "Vibe CLI wrapper for self-healing, planning, and agent utilities",
            "disabled": false,
            "tier": 2,
            "agents": [
                "atlas",
                "tetyana",
                "grisha"
            ]
        },
        "memory": {
            "command": "python3",
            "connect_timeout": 60,
            "args": [
                "-m",
                "mcp_server.memory_server"
            ],
            "description": "Knowledge graph for persistent memory",
            "disabled": false,
            "tier": 2,
            "agents": [
                "atlas",
                "tetyana"
            ]
        },
        "_comment_tier3": "=== TIER 3: MEDIUM (За потреби) ===",
        "apple-mcp": {
            "command": "bunx",
            "args": [
                "--no-cache",
                "apple-mcp@latest"
            ],
            "description": "Integration with Apple apps (Calendar, Reminders, etc.)",
            "disabled": false,
            "tier": 3,
            "agents": [
                "tetyana"
            ]
        },
        "github": {
            "command": "python3",
            "connect_timeout": 60,
            "args": [
                "-m",
                "mcp_server.github_server"
            ],
            "env": {
                "GITHUB_TOKEN": "${GITHUB_TOKEN}"
            },
            "description": "GitHub repository management",
            "disabled": false,
            "tier": 3,
            "agents": [
                "tetyana"
            ]
        },
        "duckduckgo-search": {
            "command": "python3",
            "connect_timeout": 60,
            "args": [
                "-m",
                "mcp_server.duckduckgo_search_server"
            ],
            "description": "Web search with DuckDuckGo (no API key required)",
            "disabled": false,
            "tier": 3,
            "agents": [
                "tetyana"
            ]
        },
        "_comment_tier4": "=== TIER 4: OPTIONAL (Вимкнені за замовчуванням) ===",
        "context7": {
            "command": "bunx",
            "connect_timeout": 120,
            "args": [
                "@buggyhunter/context7-mcp"
            ],
            "description": "Developer documentation access (Enable for coding tasks)",
            "disabled": false,
            "tier": 4,
            "agents": [
                "tetyana"
            ]
        },
        "whisper-stt": {
            "command": "python3",
            "connect_timeout": 120,
            "args": [
                "-m",
                "mcp_server.whisper_server"
            ],
            "env": {
                "WHISPER_MODEL": "small",
                "WHISPER_DEVICE": "mps"
            },
            "description": "Speech-to-text using OpenAI Whisper (Enable for voice input)",
            "disabled": false,
            "tier": 4,
            "agents": [
                "atlas"
            ],
            "note": "Use smaller models for local MPS; consider cloud STT for higher accuracy"
        },
        "docker": {
            "command": "npx",
            "connect_timeout": 60,
            "args": [
                "@thelord/mcp-server-docker-npx@0.4.0"
            ],
            "env": {
                "DOCKER_HOST": "unix:///var/run/docker.sock"
            },
            "description": "Docker container management (npx-based) — prefer pinned package for reproducibility",
            "disabled": false,
            "tier": 4,
            "agents": [
                "tetyana"
            ],
            "note": "Set DOCKER_HOST for custom setups if not using the default Docker socket"
        },
        "postgres": {
            "command": "bunx",
            "connect_timeout": 180,
            "args": [
                "@modelcontextprotocol/server-postgres",
                "postgresql://localhost/postgres"
            ],
            "description": "PostgreSQL database access (Enable for DB tasks)",
            "disabled": false,
            "tier": 4,
            "agents": [
                "tetyana"
            ]
        },
        "slack": {
            "command": "bunx",
            "connect_timeout": 120,
            "args": [
                "@modelcontextprotocol/server-slack"
            ],
            "env": {
                "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
                "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
            },
            "description": "Slack integration (Enable for team communication)",
            "disabled": false,
            "tier": 4,
            "agents": [
                "tetyana"
            ],
            "requires_setup": "Configure Slack tokens"
        },
        "graph": {
            "command": "python3",
            "connect_timeout": 60,
            "args": [
                "-m",
                "mcp_server.graph_server"
            ],
            "description": "Knowledge Graph visualization and export",
            "disabled": false,
            "tier": 4,
            "agents": [
                "atlas"
            ]
        },
        "time": {
            "command": "bunx",
            "connect_timeout": 60,
            "args": [
                "@mcpcentral/mcp-time"
            ],
            "description": "Time and timezone utilities",
            "disabled": false,
            "tier": 4,
            "agents": [
                "tetyana"
            ]
        }
    },
    "_metadata": {
        "version": "3.0",
        "last_updated": "2026-01-11",
        "description": "Optimized MCP configuration for AtlasTrinity with tier-based priority system",
        "tier_descriptions": {
            "tier1": "MUST-HAVE: Core system functionality, always loaded",
            "tier2": "HIGH: Recommended for most workflows, loaded at startup",
            "tier3": "MEDIUM: Useful but optional, on-demand loading",
            "tier4": "OPTIONAL: Specialized servers, disabled by default"
        },
        "active_servers": 7,
        "total_servers": 15,
        "notes": [
            "Servers with 'disabled': true are not loaded by default",
            "Environment variables use ${VAR_NAME} syntax for substitution",
            "Custom Python servers use 'python3 -m src.mcp.server_name' convention",
            "Tier 1-2 servers load at startup, Tier 3-4 on-demand",
            "Perform preflight checks: ensure 'bunx', 'npx', 'python3' are installed and MPS is available for local models"
        ]
    }
}